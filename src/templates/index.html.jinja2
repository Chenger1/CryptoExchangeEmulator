<!doctype html>
<html lang="en" data-bs-theme="dark">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Emulator</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-4Q6Gf2aSP4eDXB8Miphtr37CMZZQ5oXLH2yaXMJ2w8e2ZtHTl7GptT4jmndRuHDT" crossorigin="anonymous">
</head>
<body>
<div class="container-fluid">
    <nav class="navbar navbar-expand-lg bg-body-tertiary">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">Emulator</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                    data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="#">Home</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    <div class="row mt-2">
        <div class="col">
            <div class="card">
                <div class="card-body">
                    <div class="row">
                        <div class="col">
                            <div class="btn-group" role="group">
                                <input type="radio" class="btn-check" name="exchange-button" id="binance" autocomplete="off"
                                       checked>
                                <label class="btn btn-outline-info" for="binance">Binance</label>

                                <input type="radio" class="btn-check" name="exchange-button" id="bybit" autocomplete="off">
                                <label class="btn btn-outline-info" for="bybit">Bybit</label>

                                <input type="radio" class="btn-check" name="exchange-button" id="okx" autocomplete="off">
                                <label class="btn btn-outline-info" for="okx">OKX</label>
                            </div>
                        </div>
                    </div>
                    <div class="row mt-2">
                        <div class="col">
                            <button type="button" class="btn btn-primary" id="connect-btn">Connect</button>
                        </div>
                    </div>
                    <div class="row mt-2">
                        <div class="col">
                            <span class="text-warning" id="connection-status">Not Connected</span>
                        </div>
                    </div>
                    <div class="row mt-2">
                        <div class="col">
                            <form id="signal-form">
                                <label for="signal" class="form-label">Signal data</label>
                                <textarea name="signal" id="signal" cols="50" rows="10" class="form-control" placeholder="Place signal here to send"></textarea>
                            </form>
                        </div>
                    </div>
                    <div class="row mt-2">
                        <div class="col">
                            <button class="btn btn-primary" id="send-signal">Send signal</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-j1CDi7MgGQ12Z7Qab0qlWQ/Qqz24Gc6BM0thvEMVjHnfYGF0rmFCozFSxQBxwHKO"
        crossorigin="anonymous"></script>
<script src="{{ url_for('assets', file_path='websocket.js') }}"></script>
<script>
    const handler = new WebsocketHandler();
    document.getElementById('connect-btn').onclick = () =>{
        handler.connect();
    }
</script>
</body>
</html>